<body style="text-align: center; ">
    <div class="container">
        <h1> New user registration</h1>
        <form action="/register" method="POST">
            <div class="text-muted mb-2"; text-align:justify>
                <div>
                    <label for="user_name">Username</label>
                    <input required value="<%=user.user_name %>" type="text" name="user_name" id="user_name">
                </div>
                <div>
                    <label for ="email">Email ID</label>
                    <input required value="<%=user.email %>" type="text" name="email" id="email">
                </div>
                <div>
                    <label for ="password">Password</label>
                    <input required value ="<%=user.password %>" type="password" name="password" id="password">
                </div>
            <a href="/" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">SignUp</button>
            </div>
        </form>
    </div>    
    </body>
</html>